{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "downlevelIteration": true,
    "importHelpers": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "target": "ES2024",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2024",
      "dom"
    ],
    "useDefineForClassFields": false,
    "esModuleInterop": true
  }
}
